{
    "manifest_version": 2,

    "name": "Backgroundit",
    "description": "Wallpapers everywhere!!",

    "version": "1.0",

    "permissions": [
      "tabs",
      "storage",
      "http://*.wallhaven.cc/",
      "https://*.wallhaven.cc/"
    ],
    "icons": {
      "16":  "icons/backgroundit-icon16.png",
      "48":  "icons/backgroundit-icon48.png",
      "128": "icons/backgroundit-icon128.png"
    },
    "background": {
      "scripts": [
        "lib/jquery.js",
        "common.js",
        "background.js"
      ],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "38": "icons/backgroundit-icon38.png",
        "19": "icons/backgroundit-icon19.png"
      }
    },
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["lib/jquery.js", "common.js", "content_scripts/js/main.js"],
        "css": ["content_scripts/css/main.css"]
      }
    ]
}