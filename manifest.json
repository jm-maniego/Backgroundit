{
  "manifest_version": 2,

  "name": "Backgroundit",
  "description": "Wallpapers everywhere!!",

  "version": "2.2",

  "permissions": [
    "tabs",
    "storage",
    "http://*.wallhaven.cc/",
    "https://*.wallhaven.cc/"
  ],
  "icons": {
    "16":  "backgroundit-icon16.png",
    "48":  "backgroundit-icon48.png",
    "128": "backgroundit-icon128.png"
  },
  "background": {
    "scripts": [
      "lib/jquery.js",
      "common.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "38": "backgroundit-icon38.png",
      "19": "backgroundit-icon19.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery.js", "common.js", "content_scripts/js/main.js"],
      "css": ["content_scripts/css/main.css"]
    },
    {
      "matches": [
        "*://alpha.wallhaven.cc/*",
        "*://wallhaven.cc/*"
      ],
      "css": ["content_scripts/css/wallhaven.css"],
      "js": ["lib/jquery.js", "content_scripts/js/wallhaven.js"]
    }
  ]
}